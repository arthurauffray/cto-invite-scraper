# Discord Authentication
# Get this from Discord web app -> F12 -> Network -> Authorization header
DISCORD_TOKEN=your_discord_token_here

# CTO.new Authentication  
# Get this from cto.new -> F12 -> Network -> api.enginelabs.ai/invites/redeem -> Bearer token
# Note: The bot will automatically refresh this token every 30 seconds using Clerk session management
CTO_AUTH_TOKEN=your_cto_auth_token_here

# Channel IDs to monitor (comma-separated)
# These are the official CTO.new Discord channels where invite codes are shared
# Default channels: invite-sharing, general, announcements
# To find channel IDs: Right-click channel -> Copy ID (requires Discord Developer Mode)
CHANNEL_IDS=1428387946293362789,1427788039144341584,1427787585052344372

# Optional: Notifications
# Choose one mode: webhook | channel | dm | none
# NOTIFY_MODE=webhook

# For webhook mode - Discord webhook URL
# NOTIFY_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# For webhook/channel mode - User ID to ping on success
# NOTIFY_PING_USER_ID=123456789012345678

